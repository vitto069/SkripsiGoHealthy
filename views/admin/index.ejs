<% layout('layouts/boilerplate')%>
  <div class="col-12 mt-3 mb-3 d-flex justify-content-between">
    <h4 class="text-uppercase"><i class="fas fa-users-cog mr-1"></i>Data Admin</h4>
    <a href="#" data-toggle="modal" data-target="#exampleModalCenter" class="btn btn-primary"><i
        class="fas fa-plus mr-1"></i>Tambah Admin</a>



    <!-- Modal Tambah data -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><i class="fas fa-plus mr-1"></i>Tambah Data</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- form tambah user -->
            <form method="POST" action="/admin/register">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Nama Lengkap</label>
                <input type="text" name="fullname" class="form-control" id="recipient-name" required>
              </div>
              <div class="form-group">
                <label for="recipient-npwp" class="col-form-label">Username</label>
                <input type="text" name="username" class="form-control" id="recipient-npwp" required>
              </div>
              <div class="form-group">
                <label for="recipient-pw" class="col-form-label">Password</label>
                <input type="password" name="password" class="form-control" id="recipient-pw" required>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            <button class="btn btn-primary" type="reset" value="reset"><i
                class="fas fa-sync-alt mr-1"></i>Reset</button>
            <button class="btn btn-success"><i class="fas fa-save mr-1"></i>Simpan</button>
          </div>
          </form>
        </div>
      </div>
    </div>


  </div>
  <div class="card mb-4">
    <div class="card-header">
      <i class="fas fa-table mr-1"></i>
      Daftar Data Admin
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-sm table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
          <thead class="table-info">
            <tr>
              <th class="p-3">No.</th>
              <th class="p-2">Nama Lengkap</th>
              <th class="p-2">Username</th>
              <th class="p-2">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% let nomor=1; for(let admin of admins){ %>
              <tr class="table-active">
                <td class="p-2">
                  <%= nomor++ %>
                </td>
                <td class="p-2">
                  <%= admin.fullname %>
                </td>
                <td class="p-2">
                  <%= admin.username %>
                </td>
                <td class="d-flex p-3 justify-content-center">
                  <a class="btn btn-warning mr-1" href="/admin/<%= admin.id %>/edit"><i class="fas fa-edit"></i></a>
                  <form method="POST" action="/admin/<%= admin.id %>?_method=DELETE">
                    <button class="btn btn-danger" onclick="return confirm('Apakah yakin ingin menghapus data ini?')"><i
                        class="fas fa-trash-alt"></i></button>
                  </form>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>