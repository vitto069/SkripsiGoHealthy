<% layout('layouts/boilerplate')%>
<div class="overlay">

  <div class="col-12 mt-3 mb-3 d-flex justify-content-between">
    <h4 class="text-uppercase"><i class="fas fa-chart-area mr-1"></i>Data Hasil Penilaian</h4>
    <!-- <button class="btn btn-danger" id="download"><i class="fas fa-print mr-1"></i>Cetak Laporan</button> -->
    <a class="btn btn-danger" id="download" href="#"><i class="fas fa-print mr-1"></i>Cetak Laporan</a>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <i class="fas fa-table mr-1"></i>
      Data Hasil Perankingan
    </div>
    <div class="card-body" id="invoice">
      <h3 class="mb-4">Pt. Maharani Infotech Solutions</h3>
      <hr>
      <p class="text-uppercase font-weight-bold text-center">Laporan Hasil Perhitungan Karyawan Terbaik Menggunakan Metode MAUT</p>
      <div class="table-responsive" >
        <table class="table table-sm table-bordered text-center" id="invoice" width="100%" cellspacing="0">
          <thead class="thead-dark thead-centered">
            <tr>
              <th class="p-3">Rangking</th>
              <th class="p-3">NIK</th>
              <th class="p-3">Nama Karyawan</th>
              <th class="p-3">Nilai Evaluasi</th>
            </tr>
          </thead>
          <tbody>
            <% let nomor=1; for(let skor of skors){ %>
                  <tr class="">
                    <td class="p-2">
                      <%= nomor++ %>
                    </td>
                    <td class="p-2">
                      <%= skor.ktp %>
                    </td>
                    <td class="p-2">
                      <%= skor.nama %>
                    </td>
                    <td class="p-2">
                      <%= skor.bobot_subkriteria %>
                    </td>
                  </tr>
                  <%} %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

  <script>

    window.onload = function () {
     
        const invoice = this.document.getElementById("invoice");
     var opt = {
         margin: 1,
         filename: 'myfile.pdf',
         image: { type: 'jpeg', quality: 0.99 },
         html2canvas: { scale: 2 },
         jsPDF: { unit: 'in', format: 'letter', orientation: 'landscape' },
     };
     html2pdf().from(invoice).set(opt).save();
     setTimeout(function (){
       window.location.href = "/hasil";       
    }, 1000/2); // download the file in 1000/4 seconds
   
  
            }
  </script>